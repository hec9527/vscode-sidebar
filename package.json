{
    "name": "test",
    "displayName": "test",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:showCountry"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "test.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "test.refreshsideBar",
                "title": "Refresh SiderBar",
                "icon": {
                    "light": "/src/svg/refresh.svg",
                    "dark": "/src/svg/refresh-light.svg"
                }
            },
            {
                "command": "test.showError",
                "title": "showError",
                "icon": {
                    "light": "/src/svg/error.svg",
                    "dark": "/src/svg/error-light.svg"
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "showCountry",
                    "name": "中国行政区划",
                    "icon": "/src/svg/县城-light.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "test.refreshsideBar",
                    "when": "view == showCountry",
                    "group": "navigation"
                },
                {
                    "command": "test.helloWorld",
                    "when": "view == showCountry"
                }
            ],
            "view/item/context": [
                {
                    "command": "test.helloWorld",
                    "when": "view == showCountry"
                },
                {
                    "command": "test.showError",
                    "when": "view == showCountry",
                    "group": "inline"
                }
            ]
        },
        "keybindings": [
            {
                "command": "test.helloWorld",
                "key": "ctrl+s ctrl+p",
                "mac": "cmd+s cmd+p"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack --config ./build/node-extension.webpack.config.js",
        "watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
        "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.46.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.15.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1",
        "ts-loader": "^8.0.11",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0"
    }
}
